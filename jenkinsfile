pipeline {
    agent any

    stages {
        stage('Install') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                bat 'pytest tests/ --html=report.html --self-contained-html'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'screenshots/*.png', fingerprint: true
            publishHTML(target: [
                reportName : 'Test Report',
                reportDir  : '.',
                reportFiles: 'report.html'
            ])
        }
    }
}
